@{
    var x = new GezenKitap.BLL.Concrete.CategoryConcrete();
    var lstCategory = x.CategoryRepository.GetAll();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 20px;
        }

        #myBtn {
            display: none;
            position: fixed;
            bottom: 20px;
            right: 30px;
            z-index: 99;
            font-size: 18px;
            border: none;
            outline: none;
            background-color: red;
            color: white;
            cursor: pointer;
            padding: 15px;
            border-radius: 4px;
        }

            #myBtn:hover {
                background-color: #555;
            }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Gezen Kitap", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        @Html.ActionLink("Bilim ve Sanat", "Book", "Book", new { id = 1 }, new { @class = "navbar-brand" })
        @Html.ActionLink("Çocuk", "Book", "Book", new { id = 2 }, new { @class = "navbar-brand" })
        @Html.ActionLink("Tarihsel", "Book", "Book", new { id = 3 }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Kategoriler      <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            @*<li><a href="#">Action</a></li>*@
                            @foreach (var item in lstCategory)
                            {
                                <li>
                                    @Html.ActionLink(item.CategoryName, "Book", "Book",
                                        new { id = item.CategoryID },
                                        new { @class = "navbar-brand" })
                                </li>
                            }
                            <li>
                                <a class="btn btn-lg btn-success"
                                   href="@Url.Action("AddBook", "Book", new { id = Html.Value("id") })">Kitap Ekle</a>
                            </li>
                        </ul>
                    </li>

                    @{
                        if (Session["OnlineKullanici"] == null)
                        {
                            <li>
                                @Html.ActionLink("Üye Ol", "Register", "Login")
                            </li>
                            <li>
                                @Html.ActionLink("Giriş Yap", "Login", "Login")
                            </li>
                        }
                        else
                        {
                            var db = new GezenKitap.DAL.ApplicationDbContext();
                            <li>
                                <a href="@Url.Action("Cart","Shopping")">
                                    Sepetiniz
                                    <span class="badge">

                                        @db.Orders.Where(z => z.IsCompleted == false && z.ApplicationUser_Id == GezenKitap.UI.Models.TemporaryUserData.UserID).ToList().Count

                                    </span>
                                </a>
                            </li>

                            <li>
                                @* Kullanıcının profil güncelleme sayfası hazırlanacak.*@
                                @Html.ActionLink(Session["OnlineKullanici"].ToString(), "UpdateProfile", "Profile")
                            </li>
                            <li>
                                @Html.ActionLink("Çıkış Yap", "Logout", "Login")
                            </li>
                        }
                    }
                </ul>
                @*<ul class="nav navbar-nav">
            <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
        </ul>*@
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <button onclick="topFunction()" id="myBtn" title="Go to top">
            <span class="glyphicon glyphicon-menu-up"></span>
        </button>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)



    <script>
        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                document.getElementById("myBtn").style.display = "block";
            } else {
                document.getElementById("myBtn").style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>

</body>
</html>
