@model GezenKitap.DATA.Entities.Book
@{
    ViewBag.Title = "BookDetail";
}

<div class="container">
    <div class="row" style="margin-top:50px;">
        <div class="col-md-4">
            <div class="img-thumbnail" style="border-radius:20px;width:100%;">
                <img src="@Url.Content(Model.ImageUrl)" alt="@Url.Content(Model.AltText)" width="100%" />
            </div>
        </div>
        <div class="col-md-8">
            <h1 style="font-weight:bold;">
                @Model.BookName
            </h1>
            @{
                for (int i = 0; i < 5; i++)
                {
                    <span class="glyphicon glyphicon-star" style="font-size:17pt; color:orange"></span>
                }
            }

            <br /><br />
            <p class="lead">
                <strong>Kredisi:</strong> @string.Format("{0:C2}", Model.CreditAmount)
            </p>
            @*<p class="lead">
                    <span style="background-color:aliceblue">
                        <strong>Stok Miktarı:</strong>
                        @Model.UnitsInStock Adet - (@Model.UnitWeight @Model.QuantityPerUnit)
                    </span>
                </p>*@
            @using (Html.BeginForm("AddToCart", "Shopping", new { id = Model.BookID }, FormMethod.Post))
            {
                @*<p class="lead">
                        <strong>Miktar: </strong>
                        @{
                            if (true)
                            {
                                <input name="quantity" type="number" value="1" min="1" max="@Model.UnitsInStock" onchange="denetle(this, @Model.UnitsInStock)" />
                            }
                            else
                            {
                                <input name="quantity" type="number" value="0" min="0" max="@Model.UnitsInStock" onchange="denetle(this, @Model.UnitsInStock)" />
                            }

                        }
                    </p>
                    <br /><br />
                    if (Model.UnitsInStock <= 0)
                    {
                        <input type="submit" value="Sepete Ekle" class="btn btn-info btn-lg" disabled="disabled" />

                    }
                    else
                    {
                        <input type="submit" value="Sepete Ekle" class="btn btn-info btn-lg" />
                    }*@

                <input type="submit" value="Talep Et" class="btn btn-info btn-lg" />
                <a href="@Url.Action("AddToWishlist","Shopping", new { id=Model.BookID})" class="btn btn-lg btn-warning">İstek Listesine Ekle</a>
            }


        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a data-toggle="tab" href="#description">Ürün Açıklaması</a>
                </li>
                <li>
                    <a data-toggle="tab" href="#reviews">Yorumlar</a>
                </li>

            </ul>
            <div class="tab-content">
                <div class="tab-pane fade in active" id="description" style="margin-top:20px;">
                    @Html.Raw(Model.Description)
                </div>
                <div class="tab-pane fade" id="reviews" style="margin-top:20px;">
                    <ul>
                        @{

                            if ((ViewData["Reviews"] as IEnumerable<GezenKitap.DATA.Entities.Review>).Count() == 0)
                            {
                                <li class="list-unstyled">Bu ürünle ilgili henüz yorum yapılmamıştır!</li>
                            }
                            else
                            {
                                foreach (var item in ViewData["Reviews"] as IEnumerable<GezenKitap.DATA.Entities.Review>)
                                {
                                    <li>
                                        <p><strong>@item.Name</strong></p>
                                        <p>
                                            @item.Comment
                                        </p>
                                    </li>
                                }
                            }
                        }
                    </ul>
                    @{
                        if (Session["OnlineKullanici"] != null)
                        {
                            <hr />
                            <h4>YORUM EKLE</h4>
                            <hr />
                            using (Html.BeginForm("AddReview", "Book", new { id = Model.BookID }, FormMethod.Post))
                            {
                                <p>
                                    <strong> Ürünü Oyla: </strong>
                                    <input type="number" value="5" min="1" max="5" class="form-control" name="rate" onchange="denetle(this,5)" />
                                </p>
                                <p>
                                    @* Adının soyadının ilk harfini alabiliriz.*@
                                    <strong>Adınız: </strong>
                                    <input type="text" name="name" class="form-control" />
                                </p>
                                <p>
                                    <strong>Yorumunuz: </strong>
                                    <textarea rows="3" name="review" class="form-control"></textarea>
                                </p>

                                <input type="submit" class="btn btn-success form-control" value="EKLE" />
                            }
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function denetle(inputElement, maxValue) {
            var value = $(inputElement).val();
            if (value > maxValue)
                $(inputElement).val(maxValue);

            if (value < 0)
                $(inputElement).val(0);
        }
    </script>
}